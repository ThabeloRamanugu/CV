    <script>
        // Display a greeting based on the time of day
        window.onload = function() {
            const hours = new Date().getHours();
            const greetingText = hours < 12 ? "Good morning!" : hours < 18 ? "Good afternoon!" : "Good evening!";
            const greeting = document.createElement("p");
            greeting.innerText = greetingText;
            greeting.style.color = "#e3f2fd";
            greeting.style.fontSize = "1.2rem";
            greeting.style.marginTop = "0.5rem";
            document.querySelector("header").appendChild(greeting);
        };
    </script>

